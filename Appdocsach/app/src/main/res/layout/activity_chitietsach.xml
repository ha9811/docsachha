<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chitietsach"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarchitietsach"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:title="Chi tiết sách"
        android:background="@android:color/holo_blue_dark"
        >
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbarchitietsach"
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:id="@+id/imgchitietsach"
            android:layout_width="160dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtchitietsach"
            android:layout_toRightOf="@+id/imgchitietsach"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtauthorchitietsach"
            android:layout_marginTop="20sp"
            android:layout_below="@+id/txtchitietsach"
            android:layout_toRightOf="@+id/imgchitietsach"
            android:textSize="22sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txtchuong"
        android:text="Mục Lục"
        android:textStyle="bold"
        android:layout_below="@+id/relative"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/lvchuong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtchuong"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
</RelativeLayout>